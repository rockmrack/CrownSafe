# BabyShield Backend Environment Configuration
# Copy this file to .env.development for local development

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Server Settings
HOST=127.0.0.1
PORT=8000
RELOAD=true

# Database Settings
DATABASE_URL=sqlite:///./babyshield_dev.db
DATABASE_ECHO=true

# Security Settings (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# File Upload Settings
UPLOAD_DIR=uploads_dev
MAX_FILE_SIZE=52428800

# AI/ML Settings (Optional)
OPENAI_API_KEY=your-openai-api-key-here
MODEL_CACHE_DIR=models_dev

# Redis Settings (Optional)
REDIS_URL=redis://localhost:6379/0

# Worker Settings (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Database Connection Pool (Production)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
