# BabyShield Backend Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Settings
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Settings (REQUIRED - Update with your database)
DATABASE_URL=postgresql://username:password@localhost:5432/babyshield_prod
DATABASE_ECHO=false

# Security Settings (REQUIRED - Generate strong secrets!)
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-IN-PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=15

# File Upload Settings
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# AI/ML Settings (Update with your keys)
OPENAI_API_KEY=your-production-openai-api-key
MODEL_CACHE_DIR=/app/models

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# Worker Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Database Credentials (for Docker)
POSTGRES_DB=babyshield
POSTGRES_USER=babyshield_user
POSTGRES_PASSWORD=your-strong-postgres-password

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_FRAME_DENY=true
SECURE_CONTENT_TYPE_NOSNIFF=true
